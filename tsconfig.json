{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": ["main.ts", "preload.ts", "renderer.ts", "forge.env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["**/*.test.ts"]
}
