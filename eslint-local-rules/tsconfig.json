{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": ["*.ts"]
}
